<h2 class="text-center text-big text-underlined">회원가입</h2>
<form action="/register" method="post" id="admin" class="login_form" autocomplete="off">
    <fieldset>
        <legend>관리자 로그인</legend>
        <div>
            <label for="user_id" class="screen_out">아이디</label>
            <input type="text" name="user_id" id="user_id" placeholder="아이디">
        </div>
        <div>
            <label for="user_pw" class="screen_out">비밀번호</label>
            <input type="password" name="user_pw" id="user_pw" placeholder="비밀번호">
        </div>
        <div>
            <label for="user_pw2" class="screen_out">비밀번호 확인</label>
            <input type="password" name="user_pw2" id="user_pw2" placeholder="비밀번호 확인">
        </div>
        <div class="d-flex gap-1">
            <input type="submit" value="완료" class="btn btn-admin">
            <input type="reset" value="취소" class="btn">
        </div>
    </fieldset>
</form>